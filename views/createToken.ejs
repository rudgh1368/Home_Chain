            <!-- 인증 처리 후 메시지가 있으면 메시지 표시 -->
            <%
                if(output){
                    if(output === "success"){
                        var message = "success create Token";
             %>         <div class="alert alert-success"><%= message %></div>
            <%     }else{
                         var message = "fail create Token, so Please turn it over again.\n";
            %>           <div class="alert alert-danger"><%= message %></div>
            <%     }}
            %>

            <form method="post" action="/createToken/create">
                <div class="form-group">
                    <label>smartContract Address</label>
                    <input type="text" class="form-control" placeholder="Address" name="smartContractAddress" maxlength="20" required>
                </div>
                <div class="form-group">
                    <label>to</label>
                    <input type="text" class="form-control" placeholder="address" name="to" maxlength="20" required>
                </div>
                <div class="form-group">
                    <label>investment amount</label>
                    <input type="text" class="form-control" placeholder="investment amount" name="investmentAmount" maxlength="20" required>
                </div>
                <div class="form-group">
                    <label>investment form</label>&nbsp;&nbsp;&nbsp;<lable id="comment" style="font-size: x-small;color: #0c5460;">1:투지자, 2:수분양자</lable>
                    <input type="text" class="form-control" placeholder="1" name="investmentForm" maxlength="20" required>
                </div>
                <input type="submit" class="btn btn-info form-control" value="create" style="margin-top: 5%">
            </form>
